generator client {
  provider   = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}
// ============================================
// MULTI-TENANT: Airlines (Tenants)
// ============================================
model Airline {
  id        String   @id @default(uuid())
  name      String   @unique
  code      String   @unique // e.g., "AA", "DL"
  logo      String?  // URL to logo
  branding  Json?    // colors, theme settings { primaryColor, secondaryColor }
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  users           User[]
  manualChapters  ManualChapter[]
  contactGroups  ContactGroup[]
  contacts       Contact[]
  
  @@map("airlines")
}

// ============================================
// ROLES: User Roles
// ============================================
enum Role {
  SUPER_ADMIN  // Can manage all airlines
  ADMIN        // Can manage their airline
  EDITOR       // Can edit manuals
  VIEWER       // Read-only access
}

// ============================================
// USERS: System Users
// ============================================
model User {
  id                String    @id @default(uuid())
  email             String    @unique
  password          String    // hashed with bcrypt
  firstName         String
  lastName          String
  role              Role      @default(VIEWER)
  active            Boolean   @default(true)
  
  // Multi-tenant: null for SUPER_ADMIN
  airlineId         String?
  airline           Airline?  @relation(fields: [airlineId], references: [id], onDelete: Cascade)
  
  // Password reset tokens
  resetToken        String?   @unique
  resetTokenExpiry  DateTime?
  
  // Refresh tokens for JWT
  refreshTokens     RefreshToken[]
  
  // Timestamps
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  lastLogin         DateTime?

  @@index([airlineId])
  @@index([email])
  @@map("users")
}

// ============================================
// REFRESH TOKENS: For JWT authentication
// ============================================
model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
  @@map("refresh_tokens")
}

// ============================================
// MANUAL CHAPTERS: Top-level manual organization
// ============================================
model ManualChapter {
  id          String   @id @default(cuid())
  title       String
  description String?
  order       Int
  active      Boolean  @default(true)
  airlineId   String
  imageUrl    String?  @map("image_url") 
  createdAt   DateTime @default(now()) @map("createdAt")
  updatedAt   DateTime @updatedAt @map("updatedAt")

  airline  Airline          @relation(fields: [airlineId], references: [id], onDelete: Cascade)
  sections ManualSection[]

  @@unique([airlineId, order], name: "manual_chapters_airlineId_order_key")
  @@index([airlineId], name: "manual_chapters_airlineId_idx")
  @@map("manual_chapters")
}

// ============================================
// MANUAL SECTIONS: Sub-sections within chapters
// ============================================
model ManualSection {
  id          String        @id @default(uuid())
  title       String
  description String?       @db.Text
  order       Int           // Display order within chapter
  active      Boolean       @default(true)
  imageUrl    String?
  // Belongs to a chapter
  chapterId   String
  chapter     ManualChapter @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  
  // Relations
  contents    ManualContent[]
  
  // Timestamps
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@unique([chapterId, order]) // Each chapter has its own ordering
  @@index([chapterId])
  @@map("manual_sections")
}

// ============================================
// CONTENT TYPES: Different types of content
// ============================================
enum ContentType {
  TEXT   // Rich text content
  IMAGE  // Image URL
  VIDEO  // Video URL
  PDF    // PDF URL
  AUDIO  // Audio URL
}

// ============================================
// MANUAL CONTENT: Actual content items
// ============================================
model ManualContent {
  id          String        @id @default(uuid())
  title       String
  type        ContentType
  content     String        @db.Text // HTML for TEXT, URL for media
  order       Int           // Display order within section
  active      Boolean       @default(true)
  
  // Belongs to a section
  sectionId   String
  section     ManualSection @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  
  // Optional metadata (file size, duration, etc.)
  metadata    Json?
  
  // Timestamps
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@unique([sectionId, order]) // Each section has its own ordering
  @@index([sectionId])
  @@map("manual_contents")
}

// ============================================
// CONTACT GROUPS: Organization groups for contacts
// ============================================
model ContactGroup {
  id          String    @id @default(uuid())
  name        String    // e.g., "Producing Broker Representatives", "London Broker Representatives"
  description String?   @db.Text
  order       Int       @default(0) @map("order") // Display order
  active      Boolean   @default(true)
  
  // Multi-tenant: belongs to an airline
  airlineId   String    @map("airline_id")
  airline     Airline   @relation(fields: [airlineId], references: [id], onDelete: Cascade)
  
  // Relations
  contacts    Contact[]
  
  // Timestamps
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  @@index([airlineId])
  @@map("contact_groups")
}

// ============================================
// CONTACTS: Individual contacts within groups
// ============================================
model Contact {
  id        String   @id @default(uuid())
  firstName String   @map("first_name")
  lastName  String   @map("last_name")
  title     String?
  company   String?
  phone     String?
  email     String?
  timezone  String?
  avatar    String?
  order     Int      @default(0)
  active    Boolean  @default(true)
  groupId   String   @map("group_id")
  airlineId String   @map("airline_id")  // ‚Üê SIN @db.Uuid
  metadata  Json?    @db.JsonB
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)

  // Relations
  group   ContactGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
  airline Airline      @relation(fields: [airlineId], references: [id], onDelete: Cascade)

  @@index([groupId], map: "idx_contacts_group_id")
  @@index([lastName, firstName], map: "idx_contacts_name")
  @@index([airlineId], map: "idx_contacts_airline_id")
  @@index([airlineId, groupId], map: "idx_contacts_airline_group")
  @@map("contacts")
}